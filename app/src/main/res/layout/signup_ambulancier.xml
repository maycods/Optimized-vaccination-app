<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/flogin">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/retourS"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_outline_circle_24"
            android:src="@drawable/ic_baseline_navigate_before_24"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/retourS"
            >
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:src="@drawable/ic_baseline_local_shipping_24"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:text="Ambulancier "
            android:textColor="@color/bleufoncé"
            android:textSize="30dp"
            android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linprinc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/retourS"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="Veuillez remplir le informations ci-dessous"
                android:textColor="@color/bleufoncé"
                android:alpha="0.54"
                android:textSize="15dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Nom Prenom"
                android:alpha="0.7"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/bleufoncé"
                android:textSize="15dp"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                />

            <EditText
                android:textColorHint="@color/HINT"
                android:id="@+id/nomprenomsA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/input"
                android:hint="Saisisez votre User Name"
                android:drawableLeft="@drawable/ic_outline_person_24"
                android:drawablePadding="10dp"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:shadowColor="@color/bleufoncé"
                android:textColor="@color/bleufoncé"
                android:minHeight="48dp"
                android:paddingLeft="20dp"
                android:fontFamily="@font/poppins_light"
                android:layout_marginBottom="8dp"
                android:textSize="15dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Age"
                android:alpha="0.7"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/bleufoncé"
                android:textSize="15dp"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                />

            <EditText
                android:textColorHint="@color/HINT"
                android:id="@+id/ageA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/input"
                android:hint="Saisisez votre Age "
                android:drawableLeft="@drawable/anniv"
                android:drawablePadding="10dp"
                android:inputType="datetime"
                android:maxLines="1"
                android:shadowColor="@color/bleufoncé"
                android:textColor="@color/bleufoncé"
                android:minHeight="48dp"
                android:paddingLeft="20dp"
                android:fontFamily="@font/poppins_light"
                android:layout_marginBottom="10dp"
                android:textSize="15dp" />
            <TextView
                android:alpha="0.7"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:text="Adresse mail"
                android:textColor="@color/bleufoncé"
                android:textSize="15dp"
                android:paddingLeft="20dp"
                android:fontFamily="sans-serif-medium"
                />

            <EditText
                android:textColorHint="@color/HINT"
                android:id="@+id/mailsA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/input"
                android:drawableLeft="@drawable/ic_baseline_mail_outline_24"
                android:hint="Saisiez votre et Nom prenom"
                android:fontFamily="@font/poppins_light"
                android:inputType="textEmailAddress"
                android:textColor="@color/bleufoncé"
                android:maxLines="1"
                android:minHeight="48dp"
                android:paddingLeft="15dp"
                android:drawablePadding="15dp"
                android:layout_marginBottom="10dp"
                android:textSize="15dp" />

            <TextView
                android:alpha="0.7"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:text="Numero de telephone "
                android:textColor="@color/bleufoncé"
                android:textSize="15dp"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="20dp"
                />
            <EditText
                android:textColorHint="@color/HINT"
                android:id="@+id/telsA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/input"
                android:drawableLeft="@drawable/phoneicon"
                android:hint="Saisiez votre numero de telephone"
                android:fontFamily="@font/poppins_light"
                android:inputType="number"
                android:textColor="@color/bleufoncé"
                android:maxLines="1"
                android:minHeight="48dp"
                android:paddingLeft="15dp"
                android:drawablePadding="15dp"
                android:layout_marginBottom="10dp"
                android:textSize="15dp" />

            <TextView
                android:paddingBottom="5dp"
                android:alpha="0.7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="3dp"
                android:text="Code"
                android:textColor="@color/bleufoncé"
                android:textSize="15dp"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="20dp"
                />

            <EditText
                android:textColorHint="@color/HINT"
                android:id="@+id/codeA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/input"
                android:drawableLeft="@drawable/mdp"
                android:hint="Saisiez votre code "
                android:fontFamily="@font/poppins_light"
                android:inputType="number"
                android:textColor="@color/bleufoncé"
                android:maxLines="1"
                android:minHeight="48dp"
                android:paddingLeft="15dp"
                android:drawablePadding="15dp"
                android:layout_marginBottom="10dp"
                android:textSize="15dp" />



        </LinearLayout>

        <Button
            android:id="@+id/suivant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/linprinc"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginVertical="30dp"
            android:layout_marginHorizontal="70dp"
            android:background="@drawable/bouton"
            android:padding="15dp"
            android:text="Suivant"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:gravity="center"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
