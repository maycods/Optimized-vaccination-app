<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/flogin" />

    <ImageButton
        android:id="@+id/retourL"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/ic_outline_circle_24"
        android:src="@drawable/ic_baseline_navigate_before_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        tools:ignore="MissingConstraints"
        />
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.88"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingTop="15dp"
            android:text="Log in "
            android:textColor="@color/bleufoncé"
            android:textSize="40dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:paddingLeft="20dp"
            android:text="N'oubliez pas de vous proteger !"
            android:textColor="@color/bleufoncé"
            android:alpha="0.54"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:alpha="0.7"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="3dp"
            android:text="Adresse mail"
            android:textColor="@color/bleufoncé"
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="20dp"
            />

        <EditText
            android:fontFamily="@font/poppins_light"
            android:id="@+id/emailL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/input"
            android:drawableLeft="@drawable/ic_baseline_mail_outline_24"
            android:hint="Saisiez votre adresse mail"
            android:textColorHint="@color/HINT"
            android:drawablePadding="15dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/bleufoncé"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:minHeight="48dp"
            android:paddingLeft="20dp"
            android:textSize="15dp" />
        <TextView
            android:paddingBottom="5dp"
            android:alpha="0.7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="3dp"
            android:text="Mot de passe "
            android:textColor="@color/bleufoncé"
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="20dp"
            />


        <EditText
            android:fontFamily="@font/poppins_light"
            android:id="@+id/PasswL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/input"
            android:drawableLeft="@drawable/mdp"
            android:hint="Saisiez votre mot de passe"
            android:textColorHint="@color/HINT"
            android:drawablePadding="15dp"
            android:layout_marginBottom="12dp"
            android:textColor="@color/bleufoncé"
            android:inputType="textPassword"
            android:maxLines="1"
            android:minHeight="48dp"
            android:paddingLeft="20dp"
            android:textSize="15dp" />



        <Button
                android:id="@+id/login1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="70dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/bouton"
                android:fontFamily="@font/poppins_semibold"
                android:padding="15dp"
                android:text="Log in"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16dp" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
